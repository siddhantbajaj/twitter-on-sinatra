   <div class="container" style="width:100%;margin-left: 10px;margin-right: 10px;">
    <div class="row">
        <div class="col s12 m6 l3">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%=name%></span>
              <p>I am a very simple card. I am good at containing small bits of information.
              I am convenient because I require little markup to use effectively.</p>
            </div>
            <div class="card-action">
              <a href="#">This is a link</a>
              <a href="#">This is a link</a>
            </div>
          </div>
        </div>
        
        <div class="col l6">


         <form class="col s12 l12" id="form_id_1" method="post" action="/tweet">
        
        <div class="input-field col s6 l12">
         <i class="material-icons prefix" onclick="updateStatus()">mode_edit</i>
          <textarea id="icon_prefix2" class="materialize-textarea" name="data"></textarea>
          <label for="icon_prefix2">What's happening?</label>

            </div>
           
           </form>



            <div class="col s12 m6 l12 ">
          <div class="card blue-grey darken-1">
          <ul class="collection">
    
    
    <li class="collection-item avatar">
      <i class="material-icons circle green">insert_chart</i>
      <span class="title">Dummy Tweet</span>
      <p>First Tweet!!! <br>
         Upvotes:0
      </p>
      <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
    </li>
    
    <% username = "Random" %>
    <% upvotes = 0 %>
    <% tweets.each do |tweet| %>
    <% users.each do |user|%>
    <% if user.id==tweet.user_id %>
    <% username=user.username %>
    <% end %>
    <% end %>
     <% votes.each do |vote|%>
    <% if vote.tweet_id==tweet.id %>
    <% upvotes=vote.upvotes %>
    <% end %>
    <% end %>
    <li class="collection-item avatar">
      <i class="material-icons circle red">play_arrow</i>
      <span class="title"><%=username%></span>
      <p><%=tweet.data%> <br>
      Upvotes:<%=upvotes%>
      </p>
      <a  class="secondary-content" onclick="increaseVotes(<%=tweet.id%>)"><i class="material-icons">grade</i></a>
    </li>
    <% end %>
  </ul>
          </div>
        </div>


           </div>
       
        
